# ============================================
# SECURITY CONFIGURATION
# ============================================

# API Keys for Frontend Authentication (comma-separated for multiple keys)
# Generate a secure random key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEYS=your_frontend_api_key_here,another_key_here

# Allowed Origins (comma-separated, use * for all in development)
# Examples: https://your-frontend.vercel.app,https://www.yourdomain.com
# For localhost development: http://localhost:5173,http://localhost:5174,http://localhost:3000
ALLOWED_ORIGINS=*i

# ============================================
# EMBEDDING API CONFIGURATION
# ============================================

# Option 1: HuggingFace (FREE, Recommended for Japanese)
HUGGINGFACE_API_KEY=your_huggingface_token_here
# Get free token at: https://huggingface.co/settings/tokens

# Option 2: OpenAI (Paid)
# OPENAI_API_KEY=your_openai_api_key_here

# Use OpenAI for Knowledge Extraction Enhancement (optional)
# If true, OpenAI will be used to enhance knowledge extraction quality
# Embeddings will still use HuggingFace if HUGGINGFACE_API_KEY is set
# USE_OPENAI_FOR_KNOWLEDGE_EXTRACTION=false

# ============================================
# LLM CONFIGURATION
# ============================================

# OpenRouter API (REQUIRED for chat endpoint)
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Get your key at: https://openrouter.ai/keys

OPENROUTER_MODEL=qwen/qwen3-30b-a3b:free

# ============================================
# TEXT-TO-SPEECH CONFIGURATION
# ============================================

# ElevenLabs API (for text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# Get your key at: https://elevenlabs.io/app/settings/api-keys

# ElevenLabs Voice Configuration
ELEVENLABS_VOICE_ID=8d0prjevDzRbEWBUu6H1
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5

# ============================================
# VECTOR DATABASE CONFIGURATION
# ============================================

# Pinecone (Recommended)
PINECONE_API_KEY=your_pinecone_api_key

# Or Upstash Vector
# UPSTASH_VECTOR_URL=your_upstash_url
# UPSTASH_VECTOR_TOKEN=your_upstash_token
